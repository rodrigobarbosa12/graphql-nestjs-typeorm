{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "assets": [
    "src/assets",
    "src/favicon.ico",
    {
      "glob": "**/*.json",
      "input": "src/infrastructure/config",
      "output": "assets/"
    }
  ]
}
